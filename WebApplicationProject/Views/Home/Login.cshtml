@{
}
@model WebApplicationProject.Data.Customer
@{
    ViewData["Title"] = "Login";
}

<h1 style="color:cadetblue">Login to the application</h1>


<form asp-action="Login">
    <!-- Email input -->
    <div class="form-outline mb-4">
        <input id="form2Example1" class="form-control" asp-for="Login" />
        <label class="form-label" for="form2Example1">Login</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <input type="password" id="form2Example2" class="form-control" asp-for="Password" />
        <label class="form-label" for="form2Example2">Password</label>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

</form>